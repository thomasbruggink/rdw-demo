<div class="container-fluid bg-2 text-center">
    <h3>Create a blog</h3>
    <form class="form-inline" action="/Blog/Create" method="post">
        <div class="row input-field">
            <label class="col-md-offset-2 col-md-2 form-label">Title</label>
            <input id="titleInputField" type="text" class="col-md-8 form-control" size="100" name="Title" />
        </div>
        <div class="row input-field">
            <label class="col-md-offset-2 col-md-2 form-label">Blog</label>
            <textarea id="contentInputField" class="col-md-8 form-control" cols="97" rows="10" name="Content"></textarea>
        </div>
        <div class="col-md-12" style="padding-top: 5px">
            <input id="blogSubmitButton" class="btn btn-default btn-lg" type="submit" value="Create" />
        </div>
    </form>
</div>