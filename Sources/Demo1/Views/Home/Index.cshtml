@model List<Business.Models.Blog>

@if (Request.Cookies["user"] != null)
{
    <div class="container-fluid bg-3 text-center">
        <h3><a id="createblog" href="/Blog/Index" class="glyphicon-plus">Create a blog</a></h3>
    </div>
}

@if (@Model.Count == 0)
{
    <div class="container-fluid bg-1 text-center">
        <h3>No blogs found :(</h3>
    </div>
}
else
{
    var backgroundCounter = 1;
    foreach (var blog in @Model)
    {
        <div class="container-fluid bg-@backgroundCounter text-center blog">
            <h1>@blog.Title</h1>
            <div class="row">
                <div class="col-md-12 blog-content">@blog.Content</div>
            </div>
            <div class="row">
                <h3 class="glyphicon-pencil">Written by: <span class="blog-writer">@blog.Writer.UserName</span></h3>
                </div>
            </div>
        backgroundCounter++;
        if (backgroundCounter >= 3)
        {
            backgroundCounter = 0;
        }
    }
}
