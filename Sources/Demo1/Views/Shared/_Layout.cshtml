<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/Design.css" rel="stylesheet" />
    <title>Blogposter</title>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Blogposter</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Home/Index">Blogs</a></li>
                    @if (Request.Cookies["user"] != null)
                    {
                        <li><a href="/User/Logout">Logout @Request.Cookies["user"].Value?</a></li>
                    }
                    else
                    {
                        <li><a href="/User/Index">Profile</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
<div>
    @RenderBody()
</div>
</body>
</html>
